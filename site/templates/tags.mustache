<div id="tags-content">
    {{#content}}
    <section id="{{tag}}">
        <a href="#{{tag}}" class="contrast">
            <h2>{{tag}}</h2>
        </a>
        {{#articles}}
            <article>
                <hgroup>
                    <a href="{{href}}" class="contrast">
                        <h3>{{fm.title}}</h3>
                    </a>
                    <p>{{fm.description}}</p>
                </hgroup>
                <span>{{summary}}</span>
                <footer>
                    {{#fm.tags}}
                        <a href="#{{.}}" class="secondary">
                            <span>{{.}}</span>
                        </a>
                    {{/fm.tags}}
                </footer>
            </article>
        {{/articles}}
    {{/content}}
</section>
</div>
